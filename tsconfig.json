{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "module": "ESNext",
    "target": "es5",
    "lib": ["es6", "dom", "ES2016", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/*/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
